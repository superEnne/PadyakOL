<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top Row: Icon, Date, Time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_history"
                app:tint="@color/padyak_primary"
                android:background="@drawable/bg_input_rounded"
                android:padding="10dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/tvLogDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dec 23, 2025"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tvLogTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:30 AM"
                    android:textColor="@color/padyak_grey"
                    android:textSize="13sp"/>
            </LinearLayout>

            <!-- Arrow Icon to indicate clickable -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_explore"
                app:tint="@color/padyak_grey"
                android:rotation="90"/>
        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F0F0F0" android:layout_marginBottom="12dp"/>

        <!-- Stats Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <!-- Distance -->
            <LinearLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:orientation="vertical" android:gravity="center_horizontal">
                <TextView android:id="@+id/tvLogDistance" android:text="12.5 km" android:textSize="18sp" android:textStyle="bold" android:textColor="@color/padyak_accent"/>
                <TextView android:text="Distance" android:textSize="11sp" android:textColor="@color/padyak_grey" android:textAllCaps="true"/>
            </LinearLayout>

            <!-- Duration -->
            <LinearLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:orientation="vertical" android:gravity="center_horizontal">
                <TextView android:id="@+id/tvLogDuration" android:text="45m 20s" android:textSize="18sp" android:textStyle="bold" android:textColor="@color/black"/>
                <TextView android:text="Duration" android:textSize="11sp" android:textColor="@color/padyak_grey" android:textAllCaps="true"/>
            </LinearLayout>

            <!-- Speed -->
            <LinearLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:orientation="vertical" android:gravity="center_horizontal">
                <TextView android:id="@+id/tvLogSpeed" android:text="15.5" android:textSize="18sp" android:textStyle="bold" android:textColor="@color/black"/>
                <TextView android:text="Avg Speed" android:textSize="11sp" android:textColor="@color/padyak_grey" android:textAllCaps="true"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tap to view route map"
            android:gravity="center"
            android:textSize="11sp"
            android:textColor="@color/padyak_accent"
            android:layout_marginTop="12dp"
            android:textStyle="italic"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>